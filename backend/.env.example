# ================================================
# Web Pertanian Wonosobo - Backend Configuration
# ================================================

# -------------------- DATABASE --------------------
DATABASE_URL=postgresql://postgres:password_PostgreSQL@localhost:5432/ecoscope_db

# -------------------- JWT AUTH --------------------
SECRET_KEY=supersecretkey
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -------------------- AUTO-SYNC --------------------
# Enable/disable automatic data sync from external API
# Options: true, false
AUTO_SYNC_ENABLED=true

# Interval for auto-sync in hours
# Examples:
#   1  = Every 1 hour
#   6  = Every 6 hours (4x per day)
#   24 = Every 24 hours (1x per day) - RECOMMENDED
#   168 = Every 7 days (1x per week)
SYNC_INTERVAL_HOURS=24

# -------------------- FORECASTING --------------------
# Enable synthetic data fallback for insufficient historical data
# Options: true, false
FORECAST_USE_SYNTHETIC_FALLBACK=true

# Minimum data points required for forecasting
FORECAST_MIN_DATA_POINTS=10

# -------------------- CORS --------------------
# Comma-separated list of allowed origins (use "*" for development only)
ALLOWED_ORIGINS=*

# -------------------- LOGGING --------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL